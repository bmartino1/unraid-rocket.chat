# =============================================================================
#  unraid-rocket.chat  –  Environment Configuration
#  https://github.com/bmartino1/unraid-rocket.chat
# =============================================================================
#  Copy this file to .env and edit the values below.
#  Lines starting with # are comments. Un-comment to override defaults.
# =============================================================================

# -----------------------------------------------------------------------------
#  Rocket.Chat
# -----------------------------------------------------------------------------
RC_IMAGE=registry.rocket.chat/rocketchat/rocket.chat
RC_RELEASE=latest
# Internal container port (rarely needs changing)
RC_PORT=3000
# Host port for DIRECT access (bypass Nginx). Set to empty to disable.
RC_HOST_PORT=3000
RC_BIND_IP=0.0.0.0
# ROOT_URL should match how users reach the service (Nginx HTTPS URL ideally)
ROOT_URL=http://192.168.2.42:60080
# Rocket.Chat Cloud registration token (optional)
REG_TOKEN=
# Prometheus metrics
PROMETHEUS_ENABLED=true
METRICS_PORT=9458

# -----------------------------------------------------------------------------
#  MongoDB
# -----------------------------------------------------------------------------
MONGODB_VERSION=8.2-ubi8
MONGO_PORT=27017
MONGO_DB=rocketchat
MONGO_RS=rs0

# -----------------------------------------------------------------------------
#  NATS
# -----------------------------------------------------------------------------
NATS_VERSION=2.11-alpine

# -----------------------------------------------------------------------------
#  Nginx Reverse Proxy
# -----------------------------------------------------------------------------
#  Unraid uses 80/443 for its web UI – we use 60080/60443 instead.
NGINX_VERSION=stable-alpine
NGINX_HTTP_PORT=60080
NGINX_HTTPS_PORT=60443
NGINX_BIND_IP=0.0.0.0
# Domain or IP for the self-signed certificate (setup.sh uses this)
NGINX_HOST=192.168.2.42

# -----------------------------------------------------------------------------
#  Paths  (Unraid appdata)
# -----------------------------------------------------------------------------
DATA_DIR=/mnt/user/appdata/unraid-rocket.chat

# -----------------------------------------------------------------------------
#  Unraid labels
# -----------------------------------------------------------------------------
UNRAID_ICON=https://raw.githubusercontent.com/RocketChat/Rocket.Chat.Artwork/master/Logos/icon.svg
